<div class="dashboard-wrapper">
  <!-- Header -->
  <div class="client-bar">
    <div class="payroll-run-header">
      <h1 class="payroll-run-title">
        <%= @payroll_run.display_name %>
      </h1>
      <div class="payroll-run-meta">
        <span class="client-name"><%= @payroll_run.client.name %></span>
        <span class="pay-period"><%= @payroll_run.pay_period_display %></span>
        <span class="status-badge <%= @payroll_run.status_badge_class %>">
          <%= @payroll_run.status_display %>
        </span>
      </div>
    </div>
    
    <div class="header-actions">
      <% if @payroll_run.editable? %>
        <%= link_to edit_payroll_run_path(@payroll_run), class: 'btn btn-primary' do %>
          <span class="btn-icon">‚úèÔ∏è</span> Edit Run
        <% end %>
      <% end %>
      
      <% if @payroll_run.draft? %>
        <%= link_to submit_for_review_payroll_run_path(@payroll_run), 
            data: { turbo_method: :patch }, 
            class: 'btn btn-success' do %>
          <span class="btn-icon">üì§</span> Submit for Review
        <% end %>
      <% elsif @payroll_run.review? %>
        <%= link_to approve_payroll_run_path(@payroll_run), 
            data: { turbo_method: :patch }, 
            class: 'btn btn-success' do %>
          <span class="btn-icon">‚úÖ</span> Approve
        <% end %>
        <%= link_to return_to_draft_payroll_run_path(@payroll_run), 
            data: { turbo_method: :patch }, 
            class: 'btn btn-secondary' do %>
          <span class="btn-icon">üìù</span> Return to Draft
        <% end %>
      <% elsif @payroll_run.approved? %>
        <%= link_to mark_as_processed_payroll_run_path(@payroll_run), 
            data: { turbo_method: :patch }, 
            class: 'btn btn-success' do %>
          <span class="btn-icon">‚ö°</span> Process Payroll
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Status and Info Cards -->
  <div class="dashboard-grid">
    <!-- Run Summary Card -->
    <div class="card">
      <div class="card-header">
        <span class="card-icon">üìä</span>
        <h2>Run Summary</h2>
      </div>
      <div class="card-body">
        <div class="summary-grid">
          <div class="summary-item">
            <span class="summary-label">Status</span>
            <span class="status-badge <%= @payroll_run.status_badge_class %>">
              <%= @payroll_run.status_display %>
            </span>
          </div>
          <div class="summary-item">
            <span class="summary-label">Pay Frequency</span>
            <span class="summary-value"><%= @payroll_run.frequency_display %></span>
          </div>
          <div class="summary-item">
            <span class="summary-label">Run Date</span>
            <span class="summary-value"><%= @payroll_run.run_date&.strftime('%B %d, %Y') %></span>
          </div>
          <div class="summary-item">
            <span class="summary-label">Employees</span>
            <span class="summary-value"><%= @payroll_run.employee_count %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Financial Summary Card -->
    <div class="card">
      <div class="card-header">
        <span class="card-icon">üí∞</span>
        <h2>Financial Summary</h2>
      </div>
      <div class="card-body">
        <div class="summary-grid">
          <div class="summary-item">
            <span class="summary-label">Total Gross Pay</span>
            <span class="summary-value financial">$<%= number_with_delimiter(@payroll_run.total_gross.round(2)) %></span>
          </div>
          <div class="summary-item">
            <span class="summary-label">Total Deductions</span>
            <span class="summary-value deductions">$<%= number_with_delimiter(@payroll_run.total_taxes.round(2)) %></span>
          </div>
          <div class="summary-item">
            <span class="summary-label">Total Net Pay</span>
            <span class="summary-value net-pay">$<%= number_with_delimiter(@payroll_run.total_net.round(2)) %></span>
          </div>
          <div class="summary-item">
            <span class="summary-label">Total Hours</span>
            <span class="summary-value"><%= number_with_precision(@payroll_run.total_hours, precision: 1) %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Employee Details Section -->
  <div class="employee-section">
    <div class="section-header">
      <h2 class="section-title">
        <span class="section-icon">üë•</span>
        Employees in this Payroll Run
        <span class="employee-count">(<%= @payroll_run.employee_count %>)</span>
      </h2>
    </div>

    <% if @payroll_entries.any? %>
      <div class="table-container">
        <table class="employee-table">
          <thead>
            <tr>
              <th class="th-name">Employee</th>
              <th class="th-department">Department</th>
              <th class="th-hours">Hours</th>
              <th class="th-rate">Rate</th>
              <th class="th-gross">Gross Pay</th>
              <th class="th-deductions">Deductions</th>
              <th class="th-net">Net Pay</th>
              <th class="th-actions">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @payroll_entries.each do |entry| %>
              <tr class="employee-row">
                <td class="td-name">
                  <div class="employee-info">
                    <div class="employee-name">
                      <%= link_to entry.employee.name, employee_path(entry.employee), class: 'employee-name-link' %>
                    </div>
                    <div class="employee-title">
                      <%= entry.employee_title %>
                    </div>
                  </div>
                </td>
                <td class="td-department">
                  <%= entry.employee_department %>
                </td>
                <td class="td-hours">
                  <div class="hours-breakdown">
                    <div class="total-hours"><%= number_with_precision(entry.hours_worked, precision: 1) %></div>
                    <% if entry.has_overtime? %>
                      <div class="overtime-detail">
                        <small>
                          <%= number_with_precision(entry.regular_hours, precision: 1) %> reg + 
                          <%= number_with_precision(entry.overtime_hours, precision: 1) %> OT
                        </small>
                      </div>
                    <% end %>
                  </div>
                </td>
                <td class="td-rate">
                  <% if entry.employee.employment_type == '1099' %>
                    $<%= number_with_precision(entry.hourly_rate, precision: 2) %>/hr
                  <% else %>
                    $<%= number_with_delimiter(entry.employee.salary || 0) %>/yr
                  <% end %>
                </td>
                <td class="td-gross">
                  <span class="gross-amount">$<%= number_with_delimiter(entry.gross_pay.round(2)) %></span>
                </td>
                <td class="td-deductions">
                  <span class="deductions-amount">$<%= number_with_delimiter(entry.total_deductions.round(2)) %></span>
                </td>
                <td class="td-net">
                  <span class="net-amount">$<%= number_with_delimiter(entry.net_pay.round(2)) %></span>
                </td>
                <td class="td-actions">
                  <div class="action-buttons">
                    <%= link_to 'View', employee_path(entry.employee), class: 'btn-edit' %>
                    <% if @payroll_run.editable? %>
                      <button type="button" class="btn-delete" onclick="removeEmployee(<%= entry.employee.id %>)">
                        Remove
                      </button>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Totals Summary -->
      <div class="totals-summary">
        <div class="totals-row">
          <span class="totals-label">Totals:</span>
          <span class="totals-employees"><%= @payroll_run.employee_count %> employees</span>
          <span class="totals-hours"><%= number_with_precision(@payroll_run.total_hours, precision: 1) %> hours</span>
          <span class="totals-gross">$<%= number_with_delimiter(@payroll_run.total_gross.round(2)) %> gross</span>
          <span class="totals-net">$<%= number_with_delimiter(@payroll_run.total_net.round(2)) %> net</span>
        </div>
      </div>

    <% else %>
      <div class="empty-state">
        <div class="empty-icon">üë•</div>
        <h3>No Employees Selected</h3>
        <p>This payroll run doesn't have any employees assigned yet.</p>
        <% if @payroll_run.editable? %>
          <%= link_to edit_payroll_run_path(@payroll_run), class: 'btn btn-primary' do %>
            <span class="btn-icon">+</span> Add Employees
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Notes Section -->
  <% if @payroll_run.description.present? %>
    <div class="card">
      <div class="card-header">
        <span class="card-icon">üìù</span>
        <h2>Notes</h2>
      </div>
      <div class="card-body">
        <p class="payroll-notes"><%= simple_format(@payroll_run.description) %></p>
      </div>
    </div>
  <% end %>
</div>

