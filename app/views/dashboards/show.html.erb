<div class="container mx-auto p-6 bg-white shadow-md rounded-lg">
  <h2 class="text-3xl font-bold mb-6 text-gray-800">PSB Payroll Dashboard</h2>

  <%= form_with url: dashboard_path, method: :get, local: true, class: "mb-6" do |form| %>
    <%= form.label :client_id, "Select Client", class: "block text-gray-700 font-medium mb-2" %>
    <%= form.select :client_id, @clients.collect { |c| [c.name, c.id] }, { include_blank: 'Select Client' }, class: "w-full p-3 border border-gray-300 rounded-lg" %>
  <% end %>

  <div class="overflow-x-auto">
    <table class="w-full text-left border-collapse">
      <thead class="bg-gray-200">
        <tr>
          <th class="p-3 text-gray-700 font-medium">Name</th>
          <th class="p-3 text-gray-700 font-medium">Hours</th>
          <th class="p-3 text-gray-700 font-medium">Salary</th>
          <th class="p-3 text-gray-700 font-medium">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
          <tr class="border-b">
            <td class="p-3"><%= employee.name %></td>
            <td class="p-3"><%= employee.hours_worked || 0 %></td>
            <td class="p-3"><%= number_to_currency(employee.salary || 0) %></td>
            <td class="p-3"><button class="bg-blue-500 text-white p-1 rounded">Edit</button></td>
          </tr>
        <% end %>
        <% if @employees.empty? %>
          <tr><td colspan="4" class="p-3 text-center text-gray-500">No employees available</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>