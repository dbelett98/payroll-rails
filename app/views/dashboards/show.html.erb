<div class="dashboard-container">
  <div class="dashboard-content">
    <h2>PSB Payroll Dashboard</h2>
    <%= form_with url: dashboard_path, method: :get, local: true do |form| %>
      <div class="client-select">
        <%= form.label :client_id, "Select Client", class: "block text-gray-700 font-medium" %>
        <%= form.select :client_id, @clients.collect { |c| [c.name, c.id] }, { include_blank: 'Select Client' }, class: "mt-1 block w-full" %>
      </div>
    <% end %>
    <table class="dashboard-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Hours</th>
          <th>Salary</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
          <tr>
            <td><%= employee.name %></td>
            <td><%= employee.hours_worked || 0 %></td>
            <td><%= number_to_currency(employee.salary || 0) %></td>
            <td><%= link_to "Edit", edit_employee_path(employee), class: "action-button" %></td>
          </tr>
        <% end %>
        <% if @employees.empty? %>
          <tr>
            <td colspan="4" class="text-center text-gray-500">No employees available</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>