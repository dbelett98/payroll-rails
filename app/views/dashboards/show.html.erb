<div class="container mx-auto p-4">
  <h2 class="text-2xl font-bold mb-4 text-gray-800">Staff Dashboard</h2>

  <%= form_with url: dashboard_path, method: :get, local: true, class: "mb-4" do |form| %>
    <%= form.select :client_id, @clients.collect { |c| [c.name, c.id] }, { include_blank: 'Select Client' }, class: "p-2 border rounded-lg w-full max-w-xs" %>
  <% end %>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="w-full">
      <thead class="bg-gray-200">
        <tr>
          <th class="p-2 text-left text-gray-600">Name</th>
          <th class="p-2 text-left text-gray-600">Hours</th>
          <th class="p-2 text-left text-gray-600">Salary</th>
          <th class="p-2 text-left text-gray-600">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
          <tr class="border-t">
            <td class="p-2"><%= employee.name %></td>
            <td class="p-2"><%= employee.hours_worked || 0 %></td>
            <td class="p-2"><%= number_to_currency(employee.salary || 0) %></td>
            <td class="p-2"><button class="bg-blue-500 text-white px-2 py-1 rounded hover:bg-blue-600">Edit</button></td>
          </tr>
        <% end %>
        <% if @employees.empty? %>
          <tr><td colspan="4" class="p-2 text-center text-gray-500">No employees available</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>