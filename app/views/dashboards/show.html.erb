<div class="dashboard-container">
  <div class="dashboard-content">
    <h2 class="dashboard-header">Staff Dashboard</h2>
    
    <%= form_with url: dashboard_path, method: :get, local: true, id: "client-select-form", class: "client-select" do |form| %>
      <div class="client-dropdown-container">
        <%= form.select :client_id, @clients.collect { |c| [c.name, c.id] }, { include_blank: 'Select Client' }, class: "client-dropdown", id: "client-select", onchange: "this.form.submit();" %>
      </div>
    <% end %>
    
    <h3 class="section-header">Add New Employee</h3>
    <%= form_with model: @new_employee, url: employees_path, local: true, class: "add-employee-form" do |form| %>
      <div class="form-grid">
        <div class="form-group">
          <%= form.label :name, "Name", class: "form-label" %>
          <%= form.text_field :name, class: "form-input" %>
        </div>
        <div class="form-group">
          <%= form.label :salary, "Salary", class: "form-label" %>
          <%= form.text_field :salary, class: "form-input" %>
        </div>
        <div class="form-group">
          <%= form.label :hours_worked, "Hours Worked", class: "form-label" %>
          <%= form.text_field :hours_worked, class: "form-input" %>
        </div>
        <div class="form-group">
          <%= form.label :title, "Title", class: "form-label" %>
          <%= form.select :title, ['Manager', 'Associate', 'Analyst', 'Intern'], { include_blank: 'Select Title' }, class: "form-select" %>
        </div>
        <%= form.hidden_field :client_id, value: @selected_client&.id %>
      </div>
      <div class="form-submit-container">
        <%= form.submit "Add Employee", class: "submit-button" %>
      </div>
    <% end %>
    
    <div class="placeholder-grid">
      <div class="placeholder-card">
        <h3>Client Overview</h3>
        <p>Coming Soon</p>
      </div>
      <div class="placeholder-card">
        <h3>Payroll Status</h3>
        <p>Coming Soon</p>
      </div>
      <div class="placeholder-card">
        <h3>Reports</h3>
        <p>Coming Soon</p>
      </div>
    </div>
    
    <table class="dashboard-table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Hours</th>
          <th>Salary</th>
          <th>Pay</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @employees.each do |employee| %>
          <tr class="table-row">
            <td class="table-cell"><%= employee.name %></td>
            <td class="table-cell"><%= employee.hours_worked || 0 %></td>
            <td class="table-cell"><%= number_to_currency(employee.salary || 0) %></td>
            <td class="table-cell"><%= number_to_currency(employee.calculate_pay) %></td>
            <td class="table-cell">
              <%= link_to "Edit", edit_employee_path(employee), class: "action-button edit-button" %>
              <%= button_to "Delete", employee_path(employee), method: :delete, data: { confirm: "Are you sure?" }, class: "action-button delete-button" %>
            </td>
          </tr>
        <% end %>
        <% if @employees.empty? %>
          <tr><td colspan="5" class="empty-message">No employees available</td></tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>