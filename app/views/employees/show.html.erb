<!-- Employee Profile Page -->
<div class="profile-wrapper">
  <!-- Breadcrumb Navigation -->
  <div class="breadcrumb-nav">
    <%= link_to 'Dashboard', dashboard_path(client_id: @client.id), class: 'breadcrumb-link' %>
    <span class="breadcrumb-separator">â€º</span>
    <span class="breadcrumb-current"><%= @employee.name %></span>
  </div>

  <!-- Employee Header Card -->
  <div class="employee-header-card">
    <div class="employee-avatar">
      <span class="avatar-initials">
        <%= @employee.name.split.map(&:first).join('').upcase %>
      </span>
    </div>
    <div class="employee-info">
      <h1 class="employee-name"><%= @employee.name %></h1>
      <p class="employee-title"><%= @employee.title || 'No title specified' %></p>
      <div class="employee-badges">
        <span class="status-badge <%= @employee.status || 'active' %>">
          <%= (@employee.status || 'active').titleize %>
        </span>
        <span class="type-badge">
          <%= @employee.employment_type || 'W2' %> Employee
        </span>
        <span class="client-badge"><%= @client.name %></span>
      </div>
    </div>
    <div class="employee-stats">
      <div class="stat">
        <span class="stat-label">Annual Salary</span>
        <span class="stat-value"><%= number_to_currency(@employee.salary || 0) %></span>
      </div>
      <div class="stat">
        <span class="stat-label">Current Pay</span>
        <span class="stat-value"><%= number_to_currency(@employee.calculate_pay) %></span>
      </div>
    </div>
  </div>

  <!-- Profile Content Grid -->
  <div class="profile-content">
    
    <!-- Basic Information -->
    <div class="info-card">
      <h3 class="card-title">Basic Information</h3>
      <div class="info-list">
        <div class="info-item">
          <span class="info-label">Full Name</span>
          <span class="info-value"><%= @employee.name %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Job Title</span>
          <span class="info-value"><%= @employee.title || 'Not specified' %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Department</span>
          <span class="info-value"><%= @employee.department || 'Not specified' %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Employment Type</span>
          <span class="info-value"><%= @employee.employment_type || 'W2' %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Employment Status</span>
          <span class="info-value status-<%= @employee.status || 'active' %>">
            <%= (@employee.status || 'active').titleize %>
          </span>
        </div>
        <div class="info-item">
          <span class="info-label">Hire Date</span>
          <span class="info-value">
            <%= @employee.hire_date&.strftime('%B %d, %Y') || 'Not specified' %>
          </span>
        </div>
      </div>
    </div>

    <!-- Payroll Information -->
    <div class="info-card">
      <h3 class="card-title">Payroll Information</h3>
      <div class="info-list">
        <div class="info-item">
          <span class="info-label">Annual Salary</span>
          <span class="info-value salary-amount">
            <%= number_to_currency(@employee.salary || 0) %>
          </span>
        </div>
        <div class="info-item">
          <span class="info-label">Pay Frequency</span>
          <span class="info-value"><%= (@employee.pay_frequency || 'biweekly').titleize %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Current Hours</span>
          <span class="info-value"><%= @employee.hours_worked || 0 %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Current Pay</span>
          <span class="info-value pay-amount">
            <%= number_to_currency(@employee.calculate_pay) %>
          </span>
        </div>
        <div class="info-item">
          <span class="info-label">Hourly Rate</span>
          <span class="info-value">
            <%= number_to_currency((@employee.salary || 0) / 2080) %>
          </span>
        </div>
      </div>
    </div>

    <!-- Contact Information -->
    <div class="info-card">
      <h3 class="card-title">Contact Information</h3>
      <div class="info-list">
        <div class="info-item">
          <span class="info-label">Phone</span>
          <span class="info-value">
            <%= @employee.phone || 'Not provided' %>
          </span>
        </div>
        <div class="info-item">
          <span class="info-label">Address</span>
          <span class="info-value">
            <%= @employee.address || 'Not provided' %>
          </span>
        </div>
        <div class="info-item">
          <span class="info-label">Emergency Contact</span>
          <span class="info-value">
            <%= @employee.emergency_contact_name || 'Not provided' %>
          </span>
        </div>
        <div class="info-item">
          <span class="info-label">Emergency Phone</span>
          <span class="info-value">
            <%= @employee.emergency_contact_phone || 'Not provided' %>
          </span>
        </div>
      </div>
    </div>

    <!-- Bank Information -->
    <div class="info-card sensitive-data">
      <h3 class="card-title">Banking Information</h3>
      <div class="info-list">
        <div class="info-item">
          <span class="info-label">Account Number</span>
          <span class="info-value sensitive">
            <%= @employee.bank_account_number.present? ? "*" * (@employee.bank_account_number.to_s.length - 4) + @employee.bank_account_number.to_s.last(4) : 'Not provided' %>
          </span>
        </div>
        <div class="info-item">
          <span class="info-label">Routing Number</span>
          <span class="info-value sensitive">
            <%= @employee.bank_routing_number.present? ? "*****#{@employee.bank_routing_number.to_s.last(4)}" : 'Not provided' %>
          </span>
        </div>
        <div class="info-item">
          <span class="info-label">SSN</span>
          <span class="info-value sensitive">
            <%= @employee.ssn.present? ? "***-**-#{@employee.ssn.to_s.last(4)}" : 'Not provided' %>
          </span>
        </div>
        <div class="info-item">
          <span class="info-label">Direct Deposit</span>
          <span class="info-value">
            <%= (@employee.bank_account_number.present? && @employee.bank_routing_number.present?) ? 'Enabled' : 'Not Setup' %>
          </span>
        </div>
      </div>
    </div>

    <!-- Tax Information -->
    <div class="info-card">
      <h3 class="card-title">Tax Information</h3>
      <div class="info-list">
        <div class="info-item">
          <span class="info-label">Marital Status</span>
          <span class="info-value">
            <%= @employee.marital_status&.humanize&.titleize || 'Not specified' %>
          </span>
        </div>
        <div class="info-item">
          <span class="info-label">Federal Allowances</span>
          <span class="info-value"><%= @employee.federal_withholding_allowances || 0 %></span>
        </div>
        <div class="info-item">
          <span class="info-label">State Allowances</span>
          <span class="info-value"><%= @employee.state_withholding_allowances || 0 %></span>
        </div>
        <div class="info-item">
          <span class="info-label">Additional Federal</span>
          <span class="info-value">
            <%= number_to_currency(@employee.federal_additional_withholding || 0) %>
          </span>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="info-card">
      <h3 class="card-title">Recent Activity</h3>
      <div class="activity-list">
        <div class="activity-item">
          <span class="activity-date">Coming Soon</span>
          <span class="activity-description">Payroll history will appear here in Step N</span>
        </div>
        <div class="activity-item">
          <span class="activity-date">Coming Soon</span>
          <span class="activity-description">Pay stub generation in Step Q</span>
        </div>
        <div class="activity-item">
          <span class="activity-date">Coming Soon</span>
          <span class="activity-description">Time tracking in Step P</span>
        </div>
      </div>
    </div>

  </div>

  <!-- Action Buttons -->
  <div class="profile-actions">
    <button type="button" class="btn btn-primary" onclick="editEmployee()">
      Edit Employee
    </button>
    <button type="button" class="btn btn-secondary" onclick="generatePayStub()">
      Generate Pay Stub (Coming Soon)
    </button>
    <%= link_to 'Back to Dashboard', dashboard_path(client_id: @client.id), class: 'btn btn-secondary' %>
  </div>
</div>

