<!-- app/views/employees/import_form.html.erb -->
<div class="import-wrapper">
  <!-- Header -->
  <div class="import-header">
    <h1>Import Employees for <%= @client.name %></h1>
    <p>Upload a CSV file to bulk import employee data</p>
  </div>

  <!-- Import Form -->
  <div class="import-form-card">
    <%= form_with url: import_employees_employees_path, method: :post, multipart: true, local: true, class: "import-form" do |form| %>
      <%= form.hidden_field :client_id, value: @client.id %>
      
      <div class="form-group">
        <%= form.label :file, "Select CSV File", class: "form-label" %>
        <%= form.file_field :file, accept: ".csv", required: true, class: "file-input" %>
        <p class="file-hint">Please select a CSV file with employee data</p>
      </div>
      
      <div class="form-actions">
        <%= link_to 'Cancel', dashboard_path(client_id: @client.id), class: 'btn btn-secondary' %>
        <%= form.submit 'Import Employees', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

  <!-- CSV Format Guide -->
  <div class="format-guide">
    <h3>CSV Format Requirements</h3>
    <p>Your CSV file should have these columns (Name, Title, and Salary are required):</p>
    
    <div class="sample-csv">
      <table class="sample-table">
        <thead>
          <tr>
            <th>Name*</th>
            <th>Title*</th>
            <th>Salary*</th>
            <th>Department</th>
            <th>Phone</th>
            <th>Email</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>John Doe</td>
            <td>Developer</td>
            <td>75000</td>
            <td>Engineering</td>
            <td>(555) 123-4567</td>
            <td>john@example.com</td>
          </tr>
        </tbody>
      </table>
    </div>
    
    <p><strong>*Required fields</strong></p>
  </div>
</div>

