<div class="min-h-screen bg-gray-50 flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-3xl font-bold text-blue-800 mb-6 text-center">PSB Payroll Login</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition" %>
      </div>
      <div class="mb-6">
        <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 transition" %>
      </div>
      <div class="mb-4">
        <%= f.submit "Log In", class: "w-full bg-blue-800 text-white p-3 rounded-lg hover:bg-blue-900 transition duration-200" %>
      </div>
    <% end %>
    <%= link_to "Forgot Password?", new_user_password_path, class: "text-blue-500 hover:underline block text-center" %>
  </div>
</div>