<div class="login-container">
  <div class="login-form">
    <h1>PSB Payroll</h1>
    <p>Welcome to Secure Payroll Management</p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-4") do |f| %>
      <div class="form-group">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
      </div>
      <div class="form-group">
        <%= f.submit "Log In", class: "form-submit" %>
      </div>
    <% end %>
    <%= link_to "Forgot Password?", new_user_password_path, class: "forgot-password" %>
  </div>
</div>