<div class="min-h-screen bg-blue-900 flex items-center justify-center">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
    <div class="text-center mb-6">
      <h1 class="text-4xl font-bold text-blue-800">PSB Payroll</h1>
      <p class="text-gray-600 mt-2">Secure Payroll Management</p>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition" %>
      </div>
      <div class="mb-6">
        <%= f.label :password, class: "block text-gray-700 font-medium mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-teal-500 transition" %>
      </div>
      <div class="mb-4">
        <%= f.submit "Log In", class: "w-full bg-teal-500 text-white p-3 rounded-lg hover:bg-teal-600 transition duration-200" %>
      </div>
    <% end %>
    <%= link_to "Forgot Password?", new_user_password_path, class: "text-blue-500 hover:underline block text-center" %>
  </div>
</div>