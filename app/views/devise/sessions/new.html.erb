<div class="min-h-screen bg-gray-100 flex items-center justify-center">
  <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-sm">
    <h2 class="text-2xl font-bold mb-4 text-gray-800 text-center">Log In</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-gray-700" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full p-2 border rounded-lg" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "block text-gray-700" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full p-2 border rounded-lg" %>
      </div>

      <div class="mb-4">
        <%= f.submit "Log In", class: "w-full bg-blue-500 text-white p-2 rounded-lg hover:bg-blue-600" %>
      </div>
    <% end %>

    <%= link_to "Forgot Password?", new_user_password_path, class: "text-blue-500 hover:underline block text-center" %>
  </div>
</div>